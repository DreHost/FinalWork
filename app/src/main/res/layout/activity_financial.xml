<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Financial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/black">

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="65sp"
            android:textColor="@color/white"
            android:gravity="right"/>

        <EditText
            android:id="@+id/intext3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="right"
            android:paddingBottom="0sp"
            android:text="0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_margin="3dp">

            <Button
                android:id="@+id/e_but1"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="AC"
                android:textSize="35sp"
                android:background="@drawable/butcircled"/>

            <Button
                android:id="@+id/e_but2"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="+/-"
                android:textSize="35sp"
                android:background="@drawable/butcircled"/>

            <Button
                android:id="@+id/e_but3"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="%"
                android:textSize="35sp"
                android:background="@drawable/butcircled"/>

            <Button
                android:id="@+id/e_but4"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="÷"
                android:textSize="35sp"
                android:background="@drawable/butcircleo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_margin="3dp">

            <Button
                android:id="@+id/e_but5"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="7"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but6"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="8"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but7"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="9"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but8"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="×"
                android:textSize="35sp"
                android:background="@drawable/butcircleo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal"
            android:layout_margin="3dp">

            <Button
                android:id="@+id/e_but9"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="4"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but10"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="5"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but11"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="6"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but12"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="-"
                android:textSize="35sp"
                android:background="@drawable/butcircleo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal"
            android:layout_margin="3dp">

            <Button
                android:id="@+id/e_but13"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but14"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="2"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but15"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="3"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but16"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="+"
                android:textSize="35sp"
                android:background="@drawable/butcircleo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal"
            android:layout_margin="3dp">

            <Button
                android:id="@+id/e_but17"
                android:layout_width="190dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but18"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="."
                android:textSize="35sp"
                android:background="@drawable/butcirclel"/>

            <Button
                android:id="@+id/e_but19"
                android:layout_width="95dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="="
                android:textSize="35sp"
                android:background="@drawable/butcircleo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/e_but20"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="("
                android:textSize="20sp"
                android:background="@drawable/butcircled"/>

            <Button
                android:id="@+id/e_but21"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text=")"
                android:textSize="20sp"
                android:background="@drawable/butcircled" />

            <Button
                android:id="@+id/e_but22"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="x^y"
                android:textSize="20sp"
                android:background="@drawable/butcircled"/>

            <Button
                android:id="@+id/e_but23"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="1/x"
                android:textSize="20sp"
                android:background="@drawable/butcircled" />

            <Button
                android:id="@+id/e_but24"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="y√x"
                android:textSize="20sp"
                android:background="@drawable/butcircled"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/e_but25"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="N"
                android:textSize="20sp"
                android:background="@drawable/butcircled" />

            <Button
                android:id="@+id/e_but26"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="I/Y"
                android:textSize="15sp"
                android:background="@drawable/butcircled" />

            <Button
                android:id="@+id/e_but27"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="PV"
                android:textSize="20sp"
                android:background="@drawable/butcircled" />

            <Button
                android:id="@+id/e_but28"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="FV"
                android:textSize="20sp"
                android:background="@drawable/butcircled" />

            <Button
                android:id="@+id/e_but29"
                android:layout_width="77dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="PMT"
                android:textSize="20sp"
                android:background="@drawable/butcircled" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/f_but_c1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/f_but_c2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/f_but_c3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/darkgrey"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/f_but_c4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>